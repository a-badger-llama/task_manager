<div class="flex flex-col gap-4" data-controller="view-components--datetime-picker-component" >
  <div class="w-fit px-2 cursor-pointer rounded-full border-1 hover:bg-secondary flex items-center justify-center" data-action="click->view-components--datetime-picker-component#toggle">
    <%= badge %>
  </div>

  <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2
 hidden w-fit flex flex-col p-4 gap-4 bg-primary rounded-xl" data-view-components--datetime-picker-component-target="datetimePicker">
    <%= render(DatePickerComponent.new(form: form, field: :due_date)) %>

    <%= render TimePickerComponent.new(form: form, field: :due_time) %>

    <div class="flex gap-4 justify-end">
      <div class="rounded-full px-4 py-2 cursor-pointer" data-action="click->view-components--datetime-picker-component#hide">Cancel</div>
      <div class="rounded-full px-4 py-2 cursor-pointer bg-secondary" data-action="click->view-components--datetime-picker-component#hide">Done</div>
    </div>
  </div>
</div>
